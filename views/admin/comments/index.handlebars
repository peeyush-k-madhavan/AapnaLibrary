<h1>Comments</h1>

<table class="table">
  <thead>
    <tr>
      <th>Id</th>
      <th>Author</th>
      {{! <th>on Post</th> }}
      <th>Date</th>

    </tr>
  </thead>
  <tbody>

    {{#each comments}}
      <tr>
        <td>{{id}}</td>
        <td>{{user.firstName}}</td>
        {{!-- <td>testing<a href="/post/{{post}}">View Post</a></td> --}}
        <td>{{generateDate date "Do MMMM YYYY"}}</td>
        <td><form action="/admin/comments/{{id}}?_method=DELETE" method="POST">
            <button type="submit" class="btn btn-danger">Delete</button>
          </form></td>

      </tr>
    {{/each}}
  </tbody>
</table>