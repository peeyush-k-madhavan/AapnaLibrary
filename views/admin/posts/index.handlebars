<h1>All Posts</h1>

<table class="table table-border">
  <thead>
    <tr>
      <th>Id</th>
      <th>Image</th>
      <th>Title</th>
      <th>Status</th>
      <th>Allow Comments</th>
      <th>Date</th>

    </tr>
  </thead>
  <tbody>
    {{#each posts}}
      <tr>
        <td>{{id}}</td>
        <td><img
            height="50"
            class="img-responsive"
            src="/uploads/{{file}}"
            alt="Image not Found"
          /></td>
        <td>{{title}}</td>
        <td>{{status}}</td>
        <td>{{allowComments}}</td>
        <td>{{generateTime date "Do MMM YYYY"}}</td>

        <td><a href="posts/edit/{{id}}" class="btn btn-info">Edit</a></td>
        <td>
          <form action="posts/{{id}}?_method=DELETE" method="post">
            <button type="submit" class="btn btn-danger">Delete</button>
          </form>
        </td>

      </tr>
    {{/each}}
  </tbody>
</table>