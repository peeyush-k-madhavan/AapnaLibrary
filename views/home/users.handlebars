<section class="section about-section gray-bg" id="about">
  <div class="container">
    <div class="row align-items-center flex-row-reverse">
      <div class="col-lg-6">
        <div class="about-text go-to">
          <h3 class="dark-color">{{user.firstName}}
            {{user.lastName}}
          </h3>
          <h6 class="theme-color lead">
            {{user.headline}}
          </h6>
          {{#if user.verified}}
            <i class="bi-patch-check-fill">Verified Profile</i>
          {{/if}}
          {{#unless user.verified}}
            <i>Profile Not Verified Yet</i>
          {{/unless}}
          <div class="row about-list">
            <div class="col-md-5">
              <div class="media">
                <label>Birthday</label>
                <p class="pmedia">{{generateDate user.birthday "Do MMMM"}}</p>
              </div>
              <div class="media">
                <label>Age</label>
                <p class="pmedia">{{calcAge user.birthday}}</p>
              </div>
              <div class="media">
                <label>City</label>
                <p class="pmedia">{{user.city}}</p>
              </div>
              <div class="media">
                <label>State</label>
                <p class="pmedia">{{user.state}}</p>
              </div>
            </div>
            <div class="col-md-7">
              <div class="media">
                <label>E-mail</label>
                <p class="pmedia">{{user.email}}</p>
              </div>
              <div class="media">
                <label>Status</label>
                <p class="pmedia">{{user.status}}</p>
              </div>
              <div class="media">
                <label>District</label>
                <p class="pmedia">{{user.district}}</p>
              </div>
              <div class="media">
                <label>Pin Code</label>
                <p class="pmedia">{{user.pincode}}</p>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-5">
        <div class="about-avatar">
          {{#if_eq user.gender "male"}}
            <img src="/uploads/male.png" title="" alt="" />
          {{else}}
            <img src="/uploads/female.png" title="" alt="" />
          {{/if_eq}}
        </div>
      </div>
    </div>
    {{! <div class="counter">
      <div class="row">
        <a href="/user/messages" class="text-center">Send Message</a>
      </div>
    </div> }}
  </div>
</section>

<hr />
<h2>{{user.firstName}}'s Posts: </h2>
{{#unless posts}}
  <h3>No Posts Found!</h3>
{{/unless}}

<div class="row">
  {{#each posts}}
    <div class="col-md-6">
      <!-- Post -->
      <div class="card mb-4">
        <img class="card-img-top" src="/uploads/{{file}}" alt="Book Image" />
        <div class="card-body">
          <h2 class="card-title">{{title}}</h2>
          <p class="card-text">{{body}}</p>
          <a href="/post/{{id}}" class="btn btn-primary">View Post &rarr;</a>
        </div>
        <div class="card-footer text-muted">
          Posted on
          {{generateDate date "MMMM Do YYYY"}}
        </div>
      </div>
    </div>
  {{/each}}
</div>