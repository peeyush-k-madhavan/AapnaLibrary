<div class="row">

  <!-- Post Content Column -->
  <div class="col-lg-8">

    <!-- Title -->
    <h1 class="mt-4">{{post.title}}</h1>

    <!-- Author -->
    <p class="lead">
      by
      <a href="#">Rajkumar [STATIC TEXT CURRENTLY]</a>
    </p>

    <hr />

    <!-- Date/Time -->
    <p>Posted on
      {{generateDate date "MMMM Do YYYY"}}
      at
      {{generateDate date "LT"}}
    </p>

    <hr />

    <!-- Preview Image -->
    <img
      class="img-fluid rounded"
      src="/uploads/{{post.file}}"
      alt="Image not Found"
    />

    <hr />

    <!-- Post Content -->
    <p class="lead">{{post.body}}</p>

    <hr />

    <!-- Comments Form -->
    <div class="card my-4">
      <h5 class="card-header">Leave a Comment:</h5>
      <div class="card-body">
        <form>
          <div class="form-group">
            <textarea class="form-control" rows="3"></textarea>
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>
    </div>

    <!-- Single Comment -->
    <div class="media mb-4">
      <img
        class="d-flex mr-3 rounded-circle"
        src=""
        alt="IMG NOT FOUND"
      />
      <div class="media-body">
        <h5 class="mt-0">Commenter Name [STATIC TEXT CURRENTLY]</h5>
        [STATIC TEXT CURRENTLY]
      </div>
    </div>

