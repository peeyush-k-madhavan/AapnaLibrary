<div class="col-md-4">
  <!-- Search Widget -->
  <div class="card my-4">
    <h5 class="card-header">Search</h5>

    <div class="form-control">
      <form action="/search" method="POST">
        <div class="row">
          <div class="col-md-9">
            <input
              type="text"
              class="form-control"
              placeholder="Search for..."
              name="text"
            />
          </div>
          <div class="col-md-2">
            <button class="btn btn-secondary" type="submit">Go!</button>
          </div>
        </div>
      </form>
    </div>
  </div>

  <!-- Categories Widget -->
  <div class="card my-4">
    <h5 class="card-header">Categories</h5>
    <div class="card-body">
      <div class="row">
        {{#each categories}}
          <div class="col-lg-6">
            <ul class="list-unstyled mb-0">
              <li>
                <a href="/categories/{{id}}">{{name}}</a>
              </li>
            </ul>
          </div>
        {{/each}}
      </div>
    </div>
  </div>

